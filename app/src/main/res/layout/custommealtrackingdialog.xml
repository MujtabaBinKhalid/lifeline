<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="310dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="85dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="1dp"
            android:id="@+id/nameoftheitem" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="3dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:text="Amount" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="3dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="70dp"
            android:text="Calories" />

        <TextView
            android:id="@+id/protext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="3dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="110dp"
            android:text="Proteins" />

        <TextView
            android:id="@+id/fattext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="3dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="150dp"
            android:text="Fats" />
        <TextView
            android:id="@+id/carbotext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="3dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="190dp"
            android:text="Carbohydates" />


        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="150dp"
            android:textColor="#ff00"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="33dp"
          />

        <TextView
            android:id="@+id/calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="150dp"
            android:textColor="#1f728d"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="73dp"
             />

        <TextView
            android:id="@+id/proteins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="150dp"
            android:textColor="#1f728d"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="113dp"
           />

        <TextView
            android:id="@+id/fats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="150dp"
            android:textColor="#1f728d"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="153dp"
           />
        <TextView
            android:id="@+id/carbohydrates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="150dp"
            android:textColor="#1f728d"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="193dp"
            />



        <Button
        android:id="@+id/closepopup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_below="@+id/carbohydrates"
        android:layout_marginTop="12dp"
        android:text="Close"
            android:background="@drawable/borderstyle2"
        android:textColor="#fff"

        />





    </RelativeLayout>

</LinearLayout>

