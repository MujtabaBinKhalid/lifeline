<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <TextView
        android:id="@+id/qtag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textColor="#1f728d"
        android:textSize="15sp"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:text="Finalzing Your Plan...." />

    <TextView
        android:id="@+id/aqqq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qtag"
        android:layout_marginTop="50dp"
        android:textColor="#1f728d"
        android:layout_marginLeft="72dp"
        android:textSize="17sp"
        android:text="Enter your Plan name!"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toolbarfirst"
        android:layout_below="@+id/qtag"
        android:layout_marginTop="125dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        >
        <EditText
            android:id="@+id/pname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Plan name."
            android:maxLines="1"
            android:layout_marginTop="30dp"
            android:padding="10dp"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="3dp"
            android:textColor="#fff"
            android:maxLength="17"
            android:textColorHint="#000"
            android:layout_above="@id/lastname"
            android:gravity="center_horizontal"
            android:background="@drawable/textfield_borders"
            android:inputType="text"
            android:ems="10"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/mark"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="6dp"
            android:id="@+id/ptip"
            android:onClick="Tooltipmessage"


            />


    </LinearLayout>






    <Button
        android:id="@+id/loginsup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_below="@+id/toolbarfirst"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:text="CreatePlan"
        android:background="@drawable/border_style"
        android:textColor="#1f728d"
        android:onClick="creating"
        />
</RelativeLayout>

