<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lifeline.fyp.fyp.socialMedia.SpecificNotification">

    <RelativeLayout
  android:id="@+id/withpic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:paddingBottom="8dp"
        android:background="#fff">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="3dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:id="@+id/linearLayout">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal"

            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userimage"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/user" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="-48dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="3dp"
                    android:paddingLeft="6dp"
                    android:textStyle="bold"
                    android:paddingRight="2sp"
                    android:paddingTop="1dp"
                    android:text="dfdf"
                    android:textColor="#1f728d"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/postedOn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="2dp"
                        android:padding="2dp"
                        android:text="Posted On"
                        android:textColor="#D3D3D3"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="2dp"
                        android:padding="2dp"
                        android:text="date"
                        android:textColor="#D3D3D3"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/at"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="2dp"
                        android:padding="2dp"
                        android:text="at"
                        android:textColor="#D3D3D3"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="2dp"
                        android:padding="2dp"
                        android:text="time"
                        android:textColor="#D3D3D3"
                        android:textSize="10dp"
                        android:textStyle="bold" />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout> <!-- VL end. -->

        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="#1f728d"-->
        <!--android:layout_marginTop= "3dp"/>-->
        <ImageView
            android:id="@+id/picofthepost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside" /> <!-- It will be replaced with IV-->

        <TextView
            android:id="@+id/textofpost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:text="TextView"
            android:textColor="#000"
            android:textSize="14dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:background="#DCDCDC" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/like"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/nolike" />

            <Button
                android:id="@+id/unlike"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="-2dp"
                android:layout_marginLeft="-20dp"
                android:background="@drawable/like"
                android:visibility="invisible" />

            <Button
                android:id="@+id/comment"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/comentblue" />

            <Button
                android:id="@+id/share"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/shareblue" />
        </LinearLayout>


        <TextView
            android:id="@+id/numoflikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="17dp"
            android:padding="3dp"
            android:text="likes"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="7dp">

            <TextView
                android:id="@+id/commentedbyname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1f728d"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:textSize="12sp"/>



        </LinearLayout>






    </LinearLayout>

</ScrollView>



    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/withtext"
        android:visibility="invisible"
        android:paddingBottom="3dp"
        android:layout_height="wrap_content"
        android:background="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="3dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:id="@+id/linearLayout2">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:orientation="horizontal"

                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/userimage2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/user" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="-48dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="3dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="2sp"
                        android:paddingTop="1dp"
                        android:text="dfdf"
                        android:textStyle="bold"
                        android:textColor="#1f728d"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="4dp"
                            android:layout_marginTop="2dp"
                            android:padding="2dp"
                            android:text="Posted On"
                            android:textColor="#D7D7D7"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/date2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="4dp"
                            android:layout_marginTop="2dp"
                            android:padding="2dp"
                            android:text="date"
                            android:textColor="#D3D3D3"
                            android:textSize="10dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="4dp"
                            android:layout_marginTop="2dp"
                            android:padding="2dp"
                            android:text="at"
                            android:textColor="#D3D3D3"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/time2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="4dp"
                            android:layout_marginTop="2dp"
                            android:padding="2dp"
                            android:text="time"
                            android:textColor="#D3D3D3"
                            android:textSize="10dp"
                            android:textStyle="bold" />


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout> <!-- VL end. -->

            <ImageView
                android:id="@+id/picofthepost2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#000"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:layout_marginTop="5dp"
                /> <!-- It will be replaced with IV-->

            <TextView
                android:id="@+id/textofpost2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:text="TextView"
                android:textColor="#000"
                android:textSize="14dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:background="#DCDCDC" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/like2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/nolike" />

                <Button
                    android:id="@+id/unlike2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="-2dp"
                    android:layout_marginLeft="-20dp"
                    android:background="@drawable/like"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/comment2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="25dp"
                    android:background="@drawable/comentblue" />

                <Button
                    android:id="@+id/share2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:visibility="invisible"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="25dp"
                    android:background="@drawable/shareblue" />
            </LinearLayout>



            <TextView
                android:id="@+id/numoflikes2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="17dp"
                android:padding="3dp"

                android:text="likes"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/commentedbyname2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#1f728d"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:textSize="12sp"/>



            </LinearLayout>






        </LinearLayout>



    </RelativeLayout>


    </RelativeLayout>
