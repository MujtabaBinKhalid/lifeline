<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    android:background="#fff"
    android:paddingBottom="4dp"
    >
<!--android:layout_marginRight="3dp"
    android:layout_marginTop="2dp"
    -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="3dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal"

            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userimage"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/user" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="-35dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="3dp"
                    android:paddingLeft="3dp"
                    android:textStyle="bold"
                    android:paddingRight="2sp"
                    android:paddingTop="1dp"
                    android:text="dfdf"
                    android:textColor="#1f728d"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/postedOn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="2dp"
                        android:padding="2dp"
                        android:text="Posted On"
                        android:textColor="#D3D3D3"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="2dp"
                        android:padding="2dp"
                        android:text="date"
                        android:textColor="#D3D3D3"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/at"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="2dp"
                        android:padding="2dp"
                        android:text="at"
                        android:textColor="#D3D3D3"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="2dp"
                        android:padding="2dp"
                        android:text="time"
                        android:textColor="#D3D3D3"
                        android:textSize="10dp"
                        android:textStyle="bold" />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout> <!-- VL end. -->

        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="#D3D3D3"-->
        <!--android:layout_marginTop= "-2dp"/>-->
        <ImageView
            android:id="@+id/picofthepost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside" /> <!-- It will be replaced with IV-->

        <TextView
            android:id="@+id/textofpost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:text="TextView"
            android:textColor="#000"
            android:textSize="14dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:background="#DCDCDC" />



        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="#D3D3D3"-->
        <!--android:layout_marginTop= "6dp"/>-->
        <!--&lt;!&ndash;<View&ndash;&gt;-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="#d3d3d3"-->
        <!--android:layout_marginTop= "7dp"/>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/like"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/nolike" />

            <Button
                android:id="@+id/unlike"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="-2dp"
                android:layout_marginLeft="-20dp"
                android:background="@drawable/like"
                android:visibility="invisible" />

            <Button
                android:id="@+id/comment"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/comentblue" />

            <Button
                android:id="@+id/share"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/shareblue" />
        </LinearLayout>


        <TextView
            android:id="@+id/numoflikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="17dp"
            android:padding="3dp"
            android:text="likes"
            android:textStyle="bold" />
        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginLeft="10dp"-->
        <!--android:text="No comments"-->
        <!--android:id="@+id/comments"-->
        <!--android:padding="3dp"-->
        <!--android:textStyle="bold"-->
        <!--android:layout_marginBottom="2dp"-->
        <!--/>-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/commentedbyimage"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:padding="1dp" />

            <TextView
                android:id="@+id/commentedbyname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="7dp"
                android:textColor="#1f728d"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/commentedcontent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:textColor="#000"
                android:textSize="10dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="56dp"
                android:visibility="invisible"
                android:text="No comments"
                android:textColor="#d3d3d3"
                android:id="@+id/comments"
                android:padding="3dp"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"
                />


        </LinearLayout>



    </LinearLayout>


</RelativeLayout>